<%- include partials/header.ejs %>
    <main>
        <div class="login-form">
            <div class="login-form__main-container">
                <div class="login-form__header">
                    <!--<img src="/images/bd.png" alt="GearTracker main logo">-->
                    <h2>Gear Tracker</h2>
                </div>
                <div class="login-form__body">
                    <form method="POST" action="/sign-in">
                        <h2 class="login-form__h2">Sign In</h2>
                        <div class="login-form__input-container">
                            <span><i class="fa fa-user"></i></span>
                            <input type="email" name="username" placeholder="Email" aria-label="email" autocomplete="off">
                            <span></span>
                        </div>
                        <div class="login-form__input-container">
                            <span><i class="fas fa-lock"></i></span>
                            <input type="password" name="password" placeholder="Password" aria-label="password" autocomplete="off">
                            <span></span>
                        </div>
                        <div class="login-form__button-group">
                            <input type="submit" value="Sign in">
                        </div>
                        <div class="login-form__footer">
                            <a href="#">Forgot password?</a>
                        </div>  
                        <div class="login-form__content">
                            <span class="login-form__content-line">Don't have an account? <a href="/sign-up">Sign up</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
<%- include partials/footer.ejs %>
</body>